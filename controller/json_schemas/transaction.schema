{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/request"
      }
    },
    "timeout": {
      "description": "timeout in ms",
      "type": "number",
      "minimum": 0,
      "maximum": 3600000
    }
  },
  "required": [
    "actions",
    "timeout"
  ],
  "definitions": {
    "request": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "service": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "timeout": {
              "description": "timeout in ms",
              "type": "number",
              "minimum": 0,
              "maximum": 3600000
            }
          },
          "required": [
            "url",
            "timeout"
          ]
        },
        "url": {
          "type": "string"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "data": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "object"
            },
            {
              "type": "string"
            }
          ]
        },
        "headers": {
          "type": "object"
        },
        "then": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/request"
            }
          ]
        },
        "$patterns": {
          "type": "object",
          "patternProperties": {
            "": {
              "$ref": "#/definitions/pattern"
            }
          }
        }
      },
      "required": [
        "_id",
        "service",
        "url",
        "method",
        "data",
        "headers"
      ]
    },
    "pattern": {
      "type": "object",
      "patternProperties": {
        "^\\$[a-zA-Z_]+$": {
          "type": "string",
          "pattern": "^\\$RESPONSE"
        }
      }
    }
  }
}
